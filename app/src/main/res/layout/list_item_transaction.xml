<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_20">

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_size_20" />

    <TextView
        android:id="@+id/tv_text_debit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_summary"
        android:layout_alignStart="@+id/tv_summary"
        android:text="@string/debit"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_debit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_text_debit"
        android:layout_toRightOf="@+id/tv_text_debit"
        android:text=""
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_text_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text_debit"
        android:layout_alignStart="@+id/tv_summary"
        android:text="@string/credit"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_text_credit"
        android:layout_toRightOf="@+id/tv_text_credit"
        android:text=""
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text_credit"
        android:layout_alignStart="@+id/tv_text_credit"
        android:text=""
        android:textColor="@android:color/secondary_text_light"
        android:textSize="@dimen/font_size_14" />
</RelativeLayout>